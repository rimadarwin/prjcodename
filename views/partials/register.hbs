<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info ">
            <div class="panel-heading">
                <h3 class="panel-title">Please sign up</h3>
            </div>
            <form role="form" method="post" enctype="multipart/form-data" action="/register">
                <div class="panel-body">
                    <div class="form-group">
                        <input type="text" class="form-control" name="photo" placeholder="Photo" autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name" autofocus required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="alias" placeholder="Alias" autofocus required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm password" required>
                    </div>
                </div>
                <div class="panel-footer">
                    <p><button type="submit" class="btn btn-default center-block">Submit</button></p>
                    <p class="text-center">You have already an account? login <a href="/login">here</a></p>
                </div>
            </form>
        </div>
        <div id="errorMessage" hidden="hidden">{{ errorMessage }}</div>
    </div>
</div>
