<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info ">
            <div class="panel-heading">
                <h3 class="panel-title">Accedi</h3>
            </div>
            <form role="form" method="post" action="/login">
                <div class="panel-body">
                        <div class="form-group">
                            <input type="text" class="form-control" name="alias" placeholder="Account" autofocus required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password" required>
                        </div>
                </div>
                <div class="panel-footer">
                    <p><button type="submit" class="btn btn-default center-block">Invia</button></p>
                    <!--<p class="text-center">Non hai ancora un account? Registrati <a href="/register">qui</a></p>-->
                </div>
            </form>
        </div>
        <div id="loginError" hidden="hidden">{{ error }}</div>
    </div>
</div>
