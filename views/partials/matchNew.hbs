<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info ">
            <div class="panel-heading">
                <h3 class="panel-title">Inserisci i dati per una nuova partita:</h3>
            </div>
            <form role="form" method="post" action="/match/matchNew">
                <div class="panel-body">
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Name" autofocus required>
                    </div>
                    <div class="form-group">
                        <label>Colore: </label>
                        <select  class="form-control" name="color">
                            <option value="0" selected>Rosso</option>
                            <option value="1" selected>Blu</option>
                        </select>
                    </div>
                    <div class="form-group">
                      <label>Ruolo: </label>
                      <select  class="form-control" name="rule">
                          <option value="0" selected>Capo</option>
                          <option value="1" selected>Agente</option>
                      </select>
                    </div>
                </div>
                <div class="panel-footer">
                    <p><button type="submit" class="btn btn-default center-block">Crea</button></p>
                </div>
            </form>
        </div>
        <div id="errorMessage" hidden="hidden">{{ errorMessage }}</div>
    </div>
</div>
