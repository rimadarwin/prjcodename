<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info ">
            <div class="panel-heading">
                <h3 class="panel-title">Registrati</h3>
            </div>
            <form role="form" method="post" enctype="multipart/form-data" action="/register">
                <div class="panel-body">
                    <div class="form-group">
                        <img src="./uploaded/thumb/default.jpg" width="200px">
                        <!-- <input type="file" class="form-control" name="photo" placeholder="Foto" autofocus> -->
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="name" placeholder="Nome" autofocus required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="alias" placeholder="Account" autofocus required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirmPassword" placeholder="Conferma password" required>
                    </div>
                </div>
                <div class="panel-footer">
                    <p><button type="submit" class="btn btn-default center-block">Invia</button></p>
                    <p class="text-center">Hai gi√† un account? Collegati <a href="/login">qui</a></p>
                </div>
            </form>
        </div>
        <div id="errorMessage" hidden="hidden">{{ errorMessage }}</div>
    </div>
</div>
