<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-info ">
            <div class="panel-heading">
                <h3 class="panel-title">Seleziona il ruolo e la squadra</h3>
            </div>
            <form role="form" method="post" action="/match/matchJoin">
                <div class="panel-body">
                        {{#if game}}
                        <p>Nome: {{ game.name }}</p>
                        <p>Utenti: {{ game.num_user }}</p>
                        <p>Stato: {{ game.status }}</p>
                        <p>Team Rosso: {{ team_r }}</p>
                        <p>Team Blu: {{ team_b }}</p>
                        {{/if}}
                        <div class="form-group">
                            <input type="hidden" class="form-control" name="id" value="{{ id }}">
                            <label>Ruolo: </label>
                            <select  class="form-control" name="rule" required>{{ rules }}</select>
                        </div>
                </div>
                <div class="panel-footer">
                    <p><button type="submit" class="btn btn-default center-block">Entra</button></p>
                </div>
            </form>
        </div>
        <div id="errorMessage" hidden="hidden">{{ errorMessage }}</div>
    </div>
</div>
