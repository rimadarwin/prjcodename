<div class="row">

    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-danger">
            <div class="panel-heading">
                <h3 class="text-center">Il mio profilo</h3>
                <h6 class="text-center">Ultima connessione: {{ lastConnection }}</h6>
            </div>
            <div class="panel-body">
                <form  role="form" action="/account" enctype="multipart/form-data" method="post">
                    <div class="form-group"><p><div align="center"><img id="thumb" src="./uploaded/thumb/{{ user.photo }}" width="150px"></div></p></div>
                    <div class="form-group">
                        <label for="name" >Nome</label>
                        <input type="text" class="form-control" id="name" placeholder="{{ user.name }}" disabled>
                    </div>
                    <div class="form-group">
                        <label for="alias" >Account</label>
                        <input type="text" class="form-control" id="alias" placeholder="{{ user.alias }}" disabled>
                    </div>
                    <div class="form-group">
                        <label for="password" >Password attuale</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required="required">
                    </div>
                    <div class="form-group">
                        <label for="newPassword" >Password nuova</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="New password" required="required">
                    </div>
                    <div class="form-group">
                        <label for="confirmNewPassword" >Conferma password nuova</label>
                        <input type="password" class="form-control" id="confirmNewPassword" name="confirmNewPassword" placeholder="Confirm new password" required="required">
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="center-block btn btn-danger"><i class="fa fa-check"></i> Invia</button>
                    </div>
                </form>
            </div>
            <div id="errorMessage" hidden="hidden">{{ errorMessage }}</div>
        </div>
    </div>

</div>
